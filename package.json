{
  "$schema": "./schemas/package.schema.json",
  "name": "sivakasi-crackers",
  "version": "1.0.0",
  "description": "Crackers Invoice Application",
  "author": "Yo Yo",
  "main": "src/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "node --max_old_space_size=4096 node_modules/vite/bin/vite.js build --mode production",
    "serve": "vite preview",
    "electron:serve": "vite build && electron src/electron.js",
    "electron:package": "electron-builder --dir",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.sivakasicrackers.app",
    "productName": "Sivakasi Crackers",
    "files": [
      "dist/**/*",
      "src/preload.js",
      "src/electron.js",
      "!node_modules/{unused-module-1,unused-module-2}",
      "!**/*.map",
      "!node_modules/electron/dist/locales/**"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/Firecrackers.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "asar": true,
    "compression": "maximum"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.7",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^5.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^6.1.1",
    "@mui/material": "^6.1.1",
    "@mui/system": "^6.1.1",
    "@mui/x-date-pickers": "^7.18.0",
    "dayjs": "^1.10.7",
    "html2pdf.js": "^0.10.2",
    "number-to-words": "^1.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "zod": "^3.23.8"
  }
}
