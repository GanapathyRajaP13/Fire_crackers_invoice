{
  "name": "sivakasi-crackers",
  "version": "1.0.0",
  "description": "Crackers Invoice Application",
  "author": "Yo Yo",
  "main": "src/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "serve": "vite preview",
    "electron:serve": "vite build && electron src/electron.js",
    "electron:package": "electron-builder --dir",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.sivakasicrackers.app",
    "productName": "Sivakasi Crackers",
    "files": [
      "dist/**/*",
      "src/preload.js",
      "src/electron.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/Firecrackers.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "asar": false
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.0",
    "electron": "^23.0.0",
    "electron-builder": "^23.0.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^5.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^6.1.1",
    "@mui/material": "^6.1.1",
    "@mui/system": "^6.1.1",
    "@mui/x-date-pickers": "^7.18.0",
    "html2pdf.js": "^0.10.2",
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "zod": "^3.23.8"
  }
}
